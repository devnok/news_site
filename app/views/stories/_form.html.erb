<%= form_with(model: story, local: true) do |form| %>
  <% if story.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(story.errors.count, "error") %> prohibited this story from being saved:</h2>

      <ul>
      <% story.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :subtitle %>
    <%= form.text_field :subtitle, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :quote %>
    <%= form.text_field :quote, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :author %>
    <%= form.text_field :author, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :section %>
    <%= form.select :section, %w[1면 정치 경제 문화 사회], {multiple: true,include_blank: false}, class: 'form-control'%>
  </div>

  <div class="form-group">
    <% if story.persisted? %>
      <div class="float-right">
        <%= link_to 'Destroy', story, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary' %>

    <% if story.persisted? %>
      <%= link_to "Cancel", story, class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", stories_path, class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>
